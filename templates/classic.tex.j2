        \kern 0.25 cm%
        \mbox{\hrefWithoutArrow{ << resume.header.linkedin_url >> }{{\footnotesize\faLinkedinIn}\hspace*{0.13cm}<< resume.header.linkedin_handle or resume.header.linkedin_url >>}}%
        <<% endif %>>
