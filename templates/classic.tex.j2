        \kern 0.25 cm%
        \mbox{\hrefWithoutArrow{tel:<< resume.header.phone | replace(' ', '') | replace('-', '') >>}{{\footnotesize\faPhone*}\hspace*{0.13cm}<< resume.header.phone >>}}%
